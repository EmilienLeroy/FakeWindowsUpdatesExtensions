{
    "name": "Fake Windows Update",
    "version": "1.0",
    "description": "Simulate a Windows update into your browser.",
    "manifest_version": 2,
    "permissions": ["storage","declarativeContent", "tabs", "activeTab","<all_urls>"],
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/windowsupdate.js","src/content.js"]
        }
    ],
    "page_action": {
        "default_popup": "popup/popup.html"
    }
}