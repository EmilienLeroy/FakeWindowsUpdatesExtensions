{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [ "node_modules/@types" ],
    },
    "exclude": [
        "dist",
        "node_modules",
    ]
}